<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:clipToPadding="false"
    android:clipChildren="false">

    <android.support.v7.widget.CardView
        style="@style/MainItem.Card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:clipToPadding="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@android:id/title"
                android:textSize="18sp"
                android:textColor="?android:textColorPrimaryInverse"
                tools:text="@string/server_status"/>

            <TextView
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@android:id/text1"
                android:gravity="center_vertical"
                android:textColor="?android:textColorPrimaryInverse"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:text="@string/status_waiting_refresh"
                android:drawablePadding="32dp"
                android:drawableStart="@drawable/ic_status_unknown_24dp"
                android:drawableTint="?android:textColorPrimaryInverse"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/MainItem.Card"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@android:id/text2"
            android:gravity="center_vertical"
            android:textColor="?android:textColorPrimaryInverse"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            tools:text="@string/status_version_not_match"
            android:drawablePadding="32dp"
            android:drawableStart="@drawable/ic_status_error_24dp"
            android:drawableTint="?android:textColorPrimaryInverse"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/MainItem.Card"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="?android:textColorPrimaryInverse"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:text="@string/status_token_changed"
            android:drawablePadding="32dp"
            android:drawableStart="@drawable/ic_status_error_24dp"
            android:drawableTint="?android:textColorPrimaryInverse"/>

    </android.support.v7.widget.CardView>

</LinearLayout>

